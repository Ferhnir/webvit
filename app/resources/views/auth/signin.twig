{% extends 'templates/app.twig' %}

{% block content %}
<div class="row justify-content-md-center">
    <div class="col col-md-6">
        <div id="flashAlert">
            {% include 'templates/partials/flash.twig' %}
        </div>
        <form id="signup-validation" action={{ path_for('auth.signin') }} method="post">
            <div class="form-group">
                <label for="Email" class="header-blue">Email address</label>
                <input type="email" class="form-control" name="email" id="Email" aria-describedby="emailHelp"
                    placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="Password" class="header-blue">Password</label>
                <input type="password" class="form-control" name="password" id="Password" placeholder="Password"
                    aria-describedby="passwordHelpInline" required>
                <a href="{{ path_for('auth.password.recover') }}" class="mt-3" role="button" aria-disabled="true">Forgot
                    your password?</a>
                <div class="invalid-feedback">
                    Please, type a password.
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-rounded">Log in</button>
            </div>
            {{ csrf.field | raw }}
        </form>
    </div>
</div>
{% endblock %}