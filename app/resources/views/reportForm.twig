{% extends 'templates/app.twig' %}

{% block content %}
<h2>Report form</h2>
<form class="mt-3">
    <div class="form-group row col-md-8">
        <label for="exampleFormControlSelect1" class="col-sm-3 col-form-label">Type of report:</label>
        <div class="col-sm-9">
            <select class="form-control" id="exampleFormControlSelect1">
                <option>Charity report</option>
            </select>
        </div>
    </div>
        <div class="form-group row col-md-8">
        <label for="exampleFormControlSelect1" class="col-sm-3 col-form-label">Date from:</label>
        <div class="col-sm-9">
            <input id="datepicker_from" width="276" placeholder="From"/>
        </div>
    </div>
        <div class="form-group row col-md-8">
        <label for="exampleFormControlSelect1" class="col-sm-3 col-form-label">Date to:</label>
        <div class="col-sm-9">
            <input id="datepicker_to" width="276" />
        </div>
    </div>
    <hr />
    <div class="form-group row col-md-8">
        <label for="exampleFormControlSelect1" class="col-sm-3 col-form-label">Save as:</label>
        <div class="col-sm-9">
            <div class="btn-group btn-block" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-secondary">PDF</button>
                <button type="button" class="btn btn-secondary">XLS</button>
                <button type="button" class="btn btn-secondary">SCV</button>
            </div>
        </div>
    </div>
</form>

{% endblock %}