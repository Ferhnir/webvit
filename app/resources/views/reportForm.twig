{% extends 'templates/app.twig' %}

{% block content %}
<h2>Report form</h2>
<hr />
<form 
    class="mt-3" 
    method="post" 
    action="{{ path_for('report.download.csv') }}">
    <div class="form-group row col-md-8">
        <label for="datepicker_from" class="col-sm-3 col-form-label">Date from:</label>
        <div class="col-sm-9">
            <input name="date_from" id="datepicker_from" width="276" placeholder="From" required/>
        </div>
    </div>
        <div class="form-group row col-md-8">
        <label for="datepicker_to" class="col-sm-3 col-form-label">Date to:</label>
        <div class="col-sm-9">
            <input id="datepicker_to" width="276" placeholder="To" required/>
        </div>
    </div>
    <hr />
    <div class="form-row col-md-8">
        <div class="col-sm-9">
            <button type="submit" class="btn btn-secondary">Download</button>
        </div>
    </div>    
    {{ csrf.field | raw }}
</form>

{% endblock %}