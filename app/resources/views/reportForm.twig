{% extends 'templates/app.twig' %}

{% block content %}
<h2>Report form</h2>
<hr />
<form 
    class="mt-3" 
    method="post" 
    action="{{ path_for('report.download.csv') }}">
    <div class="form-group row col-md-8">
        <label for="TypeReport" class="col-sm-3 col-form-label">Type of report:</label>
        <div class="col-sm-9">
            <select class="form-control" id="TypeReport" required>
                <option>Select type of report</option>
                <option>Charity donations report</option>
            </select>
        </div>
    </div>
        <div class="form-group row col-md-8">
        <label for="CharityNameSelectBox" class="col-sm-3 col-form-label">Charity name:</label>
        <div class="col-sm-9">
            <select class="form-control" name="charity_id" id="CharityNameSelectBox" required>
                <option value="*">All</option>
                {% for charity in charities %}
                    <option value="{{ charity.charity_id }}">{{ charity.charity_name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group row col-md-8">
        <label for="datepicker_from" class="col-sm-3 col-form-label">Date from:</label>
        <div class="col-sm-9">
            <input name="date_from" id="datepicker_from" width="276" placeholder="From" required/>
        </div>
    </div>
        <div class="form-group row col-md-8">
        <label for="datepicker_to" class="col-sm-3 col-form-label">Date to:</label>
        <div class="col-sm-9">
            <input id="datepicker_to" width="276" placeholder="To" required/>
        </div>
    </div>
    <hr />
    <div class="form-group row col-md-8">
        <label for="exampleFormControlSelect1" class="col-sm-3 col-form-label">Save as:</label>
        <div class="col-sm-9">
            <div class="btn-group btn-block" role="group" aria-label="Basic example">
                <button type="submit" class="btn btn-secondary" disabled>PDF</button>
                <button type="submit" class="btn btn-secondary" disabled>XLS</button>
                <button type="submit" class="btn btn-secondary">CSV</button>
            </div>
        </div>
    </div>    
    {{ csrf.field | raw }}
</form>

{% endblock %}