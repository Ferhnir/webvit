{% extends 'templates/app.twig' %}

{% block content %}
<div class="row justify-content-md-center">
    <div class="col col-md-10">
        <div class="row">
            <div class="col">
                <div id="flashAlert">
                    {% include 'templates/partials/flash.twig' %}
                </div>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col col-md-6 text-center">
                <label class="header-blue">Forgot password</label>
                <p>Please enter the email address that you used to sign up and we will sent you a link to reset your
                    password.</p>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col col-md-6 text-center">
                {{ errors | json_encode }}
                <form id="signup-validation" action={{ path_for('email.forgot.password') }} method="post">
                    <div class="form-group">
                        <label class="header-blue">Email address</label>
                        <input type="email" class="form-control {{ errors.email ? ' is-invalid' : ''}}" name="email" id="Email" aria-describedby="emailHelp"
                            placeholder="Enter email" required>
                        {% if errors.email %}
                        <div class="invalid-feedback">
                            {{ errors.email | first }}
                        </div>
                        {% endif %}
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary btn-rounded">Send</button>
                    </div>
                    {{ csrf.field | raw }}
                </form>
                <img src="{{ base_url() }}/app/public/images/pig.png" alt="PigBankImg" class="pigbank rounded mt-3">
            </div>
        </div>
    </div>
</div>
{% endblock %}