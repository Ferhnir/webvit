{% extends 'templates/app.twig' %}

{% block content %}
<div class="row justify-content-md-center">  
    <div class="col col-md-10">
        <div class="row">
            <div class="col">
                <div id="flashAlert">
                    {% include 'templates/partials/flash.twig' %}
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col text-center">
                <h5>Forgot password</h5>
                <h6>Please enter the email address that you used to sign up and we will sent you a link to reset your password.</h6>
            </div>
        </div>
        <div class="row  justify-content-md-center mt-3">
            <div class="col col-md-6">
                <form 
                id="signup-validation" 
                action={{ path_for('email.forgot.password') }} 
                method="post">
                    <div class="form-row justify-content-md-center">
                        <h5>Email address</h5>
                        <input 
                                type="email" 
                                class="form-control" 
                                name="email" 
                                id="Email" 
                                aria-describedby="emailHelp" 
                                placeholder="Enter email"
                                required>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-row justify-content-md-center mt-3">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                    {{ csrf.field | raw }}
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}